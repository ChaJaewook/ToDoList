<UserControl x:Class="ToDoList.View.SubForm.CheckListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ToDoList.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">
    <UserControl.DataContext>
        <local:CheckListViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="0"/>
        </Grid.ColumnDefinitions>

        <TextBlock Margin="20,0,0,0" VerticalAlignment="Center" Grid.Column="0" TextDecorations="{Binding CheckListDeco}" Foreground="{Binding CheckListForeground}" Text="{Binding CheckListTitle}"/>


        <Button Grid.Column="1" Content="완료" Command="{Binding SubmitCommand}"/>
        <Button Grid.Column="2" Content="수정" Command="{Binding ModCheckListCommand}"/>
        <Button Grid.Column="3" Content="삭제" Command="{Binding DelCheckListCommand}"/>
        <TextBlock Grid.Column="4" Text="{Binding UUID}" Visibility="Collapsed"/>

    </Grid>
</UserControl>
